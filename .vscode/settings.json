{
    "editor.mouseWheelZoom": true,
    "files.autoSave": "afterDelay",
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "explorer.confirmDelete": false,
    "editor.wordWrap": "on",
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "editor.rulers": [
      80,
      120
    ],
    "editor.renderWhitespace": "boundary",
    "editor.suggestSelection": "first",
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": false
    },
    "editor.parameterHints.enabled": true,
    "editor.acceptSuggestionOnEnter": "smart",
    "editor.snippetSuggestions": "top",
    "diffEditor.ignoreTrimWhitespace": false,
    "diffEditor.hideUnchangedRegions.enabled": true,
    "workbench.colorTheme": "One Dark Pro Night Flat",
    "workbench.iconTheme": "material-icon-theme",
    "terminal.integrated.scrollback": 10000,
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.cursorStyle": "underline",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.allowChords": false,
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    // C/C++ IntelliSense
    "python.defaultInterpreterPath": "C:\\Users\\USER\\AppData\\Local\\Programs\\Python\\Python313\\python.exe",
    "C_Cpp.intelliSenseEngine": "default",
    "C_Cpp.default.includePath": [
      "${workspaceFolder}/**"
    ],
    "C_Cpp.default.cStandard": "c11",
    "C_Cpp.default.cppStandard": "c++17",
    "C_Cpp.default.intelliSenseMode": "gcc-x64",
    "C_Cpp.errorSquiggles": "enabled",
    // Code Runner settings
    "code-runner.saveFileBeforeRun": true,
    "code-runner.clearPreviousOutput": true,
    "code-runner.showExecutionMessage": false,
    "code-runner.ignoreSelection": true,
    "code-runner.executorMap": {
      "c": "gcc \"$fileName\" -o \"$fileNameWithoutExt.exe\" && .\\$fileNameWithoutExt.exe",
      "javascript": "bash -c 'node \"$file\"'"
    },
    "code-runner.runInTerminal": true,
    // GitLens visual tweak
    "gitlens.graph.minimap.enabled": false,
    // Trust
    "security.workspace.trust.untrustedFiles": "open",
    "terminal.integrated.cwd": "${fileDirname}",
    "terminal.integrated.focusAfterRun": "terminal",
    "git.openRepositoryInParentFolders": "always",
    "github.copilot.nextEditSuggestions.enabled": true,
    "workbench.editor.enablePreview": false,
    "git.autofetch": true,
    "bootstrapIntelliSense": {
      "enable": false,
      "bsVersion": "5.3.6",
      "useLocalFile": false,
      "cssFilePath": "",
      "languageSupport": []
    },
    "[html]": {
      "editor.defaultFormatter": "vscode.html-language-features",
      "editor.suggest.insertMode": "replace",
      "editor.formatOnSave": true,
      "editor.quickSuggestions": {
        "other": true,
        "comments": true,
        "strings": true
      }
    },
    "[css]": {
      "editor.defaultFormatter": "vscode.css-language-features",
      "editor.suggest.insertMode": "replace",
      "editor.formatOnSave": true,
      "editor.quickSuggestions": {
        "other": true,
        "comments": true,
        "strings": true
      }
    },
    "css.validate": true,
    "css.lint.duplicateProperties": "warning",
    "css.lint.float": "warning",
    "css.lint.important": "warning",
    "css.lint.universalSelector": "warning",
    "css.format.spaceAroundSelectorSeparator": true,
    "css.completion.triggerPropertyValueCompletion": true,
    "css.hover.documentation": true,
    "css.hover.references": true,
    "scss.lint.duplicateProperties": "warning",
    "less.lint.duplicateProperties": "warning",
    // Editor enhancements
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": true,
    "editor.linkedEditing": true,
    "editor.stickyScroll.enabled": true,
    "editor.copyWithSyntaxHighlighting": true,
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.inlineSuggest.enabled": true,

    // File management
    "files.exclude": {
      "**/.git": true,
      "**/.DS_Store": true,
      "**/node_modules": true
    },
    "files.associations": {
      "*.js": "javascript",
      "*.jsx": "javascriptreact",
      "*.ts": "typescript",
      "*.tsx": "typescriptreact"
    },

    // Breadcrumbs and minimap
    "breadcrumbs.enabled": true,
    "breadcrumbs.symbolPath": "last",

    // Zen Mode settings
    "zenMode.centerLayout": true,
    "zenMode.hideLineNumbers": false,
    "zenMode.silentNotifications": true,

    // Better search experience
    "search.exclude": {
      "**/node_modules": true,
      "**/bower_components": true,
      "**/dist": true,
      "**/coverage": true
    },
    "search.smartCase": true,

    // JavaScript/TypeScript specific
    "javascript.updateImportsOnFileMove.enabled": "always",
    "javascript.suggest.completeFunctionCalls": true,
    "typescript.updateImportsOnFileMove.enabled": "always",
    "typescript.suggest.completeFunctionCalls": true,

    // JavaScript IntelliSense improvements
    "javascript.suggest.enabled": true,
    "javascript.suggestionActions.enabled": true,
    "javascript.preferences.quoteStyle": "single",
    "javascript.format.enable": true,
    "javascript.format.semicolons": "insert",
    "javascript.preferences.importModuleSpecifier": "relative",
    "javascript.inlayHints.functionLikeReturnTypes": true,
    "javascript.inlayHints.parameterNames": "all",
    "javascript.inlayHints.parameterTypes": true,
    "javascript.inlayHints.variableTypes": true,
    "javascript.referencesCodeLens.enabled": true,
    "javascript.validate.enable": true,

    // Better debugging experience
    "debug.inlineValues": "on",
    "debug.toolBarLocation": "docked",
    "debug.showBreakpointsInOverviewRuler": true,

    // Terminal improvements
    "terminal.integrated.enableMultiLinePasteWarning": "never",
    "terminal.integrated.persistentSessionReviveProcess": "onExitAndWindowClose",
    "terminal.integrated.tabs.enabled": true,

    // Auto-save and formatting
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    },

    // Better Git experience
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "git.showActionButton": {
      "commit": true,
      "publish": true,
      "sync": true
    },

    // Live Server settings
    "liveServer.settings.donotShowInfoMsg": true,
    "liveServer.settings.donotVerifyTags": true,
    "liveServer.settings.NoBrowser": false,
    "liveServer.settings.useBrowserPreview": true,
    "liveServer.settings.port": 0,
    "liveServer.settings.https": {
      "enable": true,
      "cert": "",
      "key": "",
      "passphrase": ""
    },
    "liveServer.settings.proxy": {
      "enable": false,
      "baseUri": "/",
      "proxyUri": "http://127.0.0.1:80"
    },
    "liveServer.settings.root": "/",
    "liveServer.settings.useWebExt": true,
    "liveServer.settings.useLocalIp": false,
    "liveServer.settings.ChromeDebuggingAttachment": false,
    "liveServer.settings.showOnStatusbar": true
  }
